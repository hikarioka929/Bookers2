<html>
  <head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="application.scss">
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1>Editing Book</h1>
          <% if @book.errors.any? %>
          <div class="error_explanation">
          <h4><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h4>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_for(@book) do |f| %>
      <div class="row">
        <div class="col-sm-12">
          <div class="form-group has-icon">
            <label class="control-label">Title</label><br />
            <%= f.text_field :title, class:"form-control", placeholder:"" %>
            <span class="fa fa-building form-control-icon" aria-hidden="true"></span>
          </div>
        </div>
        <div class="col-sm-6">
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <label class="control-label">body</label><br />
          <%= f.text_area :body, class:"form-control", rows:"3", placeholder:"" %>
        </div>
      </div>
      <br>
      <%= f.submit "Update Book", class:"btn btn-primary btn-block" %>
      <% end %>
      <br>
      <div class="pull-left">
        <%= link_to "Show",  book_path(@book.id) %> | <%= link_to "Back", books_path %>
      </div>
        </div>
      </div>
    </div>
  </body>
</html>